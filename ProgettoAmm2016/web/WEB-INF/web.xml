<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    
    <!-- Servlet di Cliente -->
    
    <servlet-mapping>
        <servlet-name>ClienteServlet</servlet-name>
        <url-pattern>/ClienteServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ClienteServlet</servlet-name>
        <servlet-class>progetto.servlet.ClienteServlet</servlet-class>
    </servlet>
    
    <!-- Servlet di Login -->
    
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>progetto.servlet.Login</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    
    <!-- Servlet di Venditore -->
    
    <servlet>
        <servlet-name>VenditoreServlet</servlet-name>
        <servlet-class>progetto.servlet.VenditoreServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>VenditoreServlet</servlet-name>
        <url-pattern>/VenditoreServlet</url-pattern>
    </servlet-mapping>
    
    <!-- Servlet di Home -->
    
    <servlet>
        <servlet-name>Home</servlet-name>
        <servlet-class>progetto.servlet.Home</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Home</servlet-name>
        <url-pattern>/Home</url-pattern>
    </servlet-mapping>
    
    <!-- Servlet di Articolo -->
    
    <servlet-mapping>
        <servlet-name>ArticoloServlet</servlet-name>
        <url-pattern>/ArticoloServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ArticoloServlet</servlet-name>
        <servlet-class>progetto.servlet.ArticoloServlet</servlet-class>
    </servlet>
    
    <!-- Pagina di partenza: servlet Home -->
    
    <welcome-file-list>
        <welcome-file>Home</welcome-file>
    </welcome-file-list>
</web-app>
